page {
  background-color: #fdf4e5;
}
.title {
  margin-bottom: 0rpx;
}
.more-icon{
  margin-bottom: 0rpx;
}
.idea-section {
  border-radius: 25rpx;
  background: #fff;
  margin: 10rpx 24rpx 18rpx;
  padding: 0 25rpx;
}
.idea-section-header {
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
}
.idea-section-header__time {
  font-size: 30rpx;
  color: #333;
}
.idea-section-header__state {
  font-size: 24rpx;
  color: #ff5000;
}
.idea-section-body {
  margin-bottom: 42rpx;
  display: grid;
  grid-template-columns: 184rpx 1fr 110rpx;
  grid-column-gap: 24rpx;
}
.idea-section-body__image {
  width: 184rpx;
  height: 184rpx;
  border-radius: 25rpx;
  margin-bottom: 42rpx;
  margin-top: 42rpx;
}
.idea-section-body__middle{
  margin-top: 42rpx;
}
.idea-section-body__title {
  font-size: 30rpx;
  color: #333;
  line-height: 34rpx;
  margin-bottom: 15rpx;
}
.idea-section-body__tag {
  background: #f8f8f8;
  font-size: 24rpx;
  color: #999;
  line-height: 24rpx;
  padding: 8rpx 10rpx 8rpx 10rpx;
  border-radius: 6rpx;
  margin-bottom: 15rpx;
  margin-right: 15rpx;
  display: inline-block;
}
.idea-section-body__time {
  font-size: 24rpx;
  color: #333;
  line-height: 24rpx;
  
  margin-top: 42rpx;
}
.idea-section-body__right {
  text-align: right;
  margin-top: 42rpx;
  margin-right: 20rpx;
}
.idea-section-body__price {
  font-size: 30rpx;
  color: #333;
  line-height: 34rpx;
  margin-bottom: 8rpx;
}
.idea-section-body__moreInfo-button {
  font-size: 30rpx;
  color: #333;
  background: none;
  border-radius: 100rpx;
  border-color:#fff;
  line-height: 30rpx;
  margin-top:80rpx;
  margin-bottom: 8rpx;
  padding: 8rpx 0rpx;
}

.idea-section-body__num {
  font-size: 24rpx;
  color: #999;
  line-height: 24rpx;
}
.idea-section-footer {
  display: flex;
  justify-content: flex-end;
  align-items: baseline;
  padding: 28rpx 23rpx 32rpx;
  font-size: 24rpx;
  line-height: 28rpx;
  margin-top: -42rpx;
}
.idea-section-footer__total {
  color: #999;
  margin-right: 10rpx;
}
.idea-section-footer__desc {
  color: #333;
}
.idea-section-footer__sum {
  color: #333;
  font-size: 30rpx;
}
